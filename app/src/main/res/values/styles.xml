<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="TextView.Logo">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/ssp_bold</item>
    </style>

    <style name="TextView.Options">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.Link">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.CardDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorCardDate</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.CardInformation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.CardModel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="TextView.CardPrice">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/ssp_bold</item>
    </style>

    <style name="TextView.CardSalon">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>



    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.Icons">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ImageView.Favorite">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ImageView.ImageCircleBarter">
        <item name="android:padding">7dp</item>
    </style>

    <style name="ImageView.ImagePercent">
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ImageView.CardInfoVip">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>



    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Header">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@color/colorCarrot</item>
    </style>

    <style name="LinearLayout.Options">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LinearLayout.Body">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorWhiteSilver</item>
    </style>

    <style name="LinearLayout.Title">
        <item name="android:background">@color/colorSilverAccent</item>
    </style>

    <style name="LinearLayout.CardInfoProduct">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>





    <style name="View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSilver</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>





</resources>